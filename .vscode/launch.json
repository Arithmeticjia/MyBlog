    "version": "0.2.0",
    "configurations": [
        
        {
            "name": "Python3",
            "type": "python",
            "request": "launch",
            "stopOnEntry": false,
            "pythonPath": "/Library/Frameworks/Python.framework/Versions/3.6/bin/python3",
            "program": "${file}",
            "cwd":"${workspaceFolder}",
            "env": {},
            "console": "externalTerminal",
            "envFile": "${workspaceFolder}/.env"
        },
        {
            "name": "Python: Terminal (integrated)",
            "type": "python",
            "request": "launch",
            "stopOnEntry": false,
            "pythonPath": "/Library/Frameworks/Python.framework/Versions/3.6/bin/python3",
            "program": "${file}",
            "cwd": "",
            "console": "integratedTerminal",
            "env":{},
            "envFile": "${workspaceFolder}/.env"
        },
        {
            "name": "Python: Terminal (external)",
            "type": "python",
            "request": "launch",
            "stopOnEntry": false,
            "pythonPath": "/Library/Frameworks/Python.framework/Versions/3.6/bin/python3",
            "program": "${file}",
            "cwd": "",
            "console": "externalTerminal",
            "env": {},
            "envFile": "${workspaceFolder}/.env"
        },
        {
            "name": "Python: Django",
            "type": "python",
            "request": "launch",
            "stopOnEntry": true,
            "console": "integratedTerminal",
            "pythonPath": "/Library/Frameworks/Python.framework/Versions/3.6/bin/python3",
            "program": "${workspaceFolder}/manage.py",
            "cwd": "${workspaceFolder}",
            "args": [
                "runserver",
                "8000",
                "--noreload",
                "--nothreading"
            ],
            "env": {},
            "envFile": "${workspaceFolder}/.env",
        }
    ]
}